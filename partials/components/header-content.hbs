<section class="gh-header gh-outer{{#match layout "side"}}{{#match background "image"}} is-side{{/match}}{{/match}}{{#match layout "!=" "side"}}{{#match background "image"}}{{#if @site.cover_image}} has-background-image{{/if}}{{else match background "color"}} has-background-color{{/match}}{{/match}}">
    <div class="gh-header-inner gh-inner">

        {{#match background "image"}}
            {{#if @site.cover_image}}
                <img class="gh-header-image" src="{{img_url @site.cover_image}}" alt="{{@site.title}}">
            {{/if}}
        {{/match}}

        <div class="gh-header-content">
            {{#if primary}}
                <h1 class="gh-header-primary">{{primary}}</h1>
            {{/if}}
            {{#if secondary}}
                <p class="gh-header-secondary">{{secondary}}</p>
            {{/if}}
            {{#match action "button"}}
                <a class="gh-header-action gh-header-button gh-btn" href="#">Learn more</a>
            {{else match action "email"}}
                {{#if @site.members_enabled}}
                    {{#unless @member}}
                        {{#unless @site.members_invite_only}}
                            <button class="gh-header-action gh-header-input" data-portal>du@example.com <span>Los geht's</span></button>
                        {{/unless}}
                    {{/unless}}
                {{/if}}
            {{else match action "search"}}
                <button class="gh-header-action gh-header-input" data-ghost-search>Noch nicht f&uuml;ndig geworden?<span>{{> "icons/search"}}</span></button>
            {{/match}}
            
            <div class="contact-container">
              <form target="_blank" action="https://formsubmit.co/b03c73206ffc3cac49c565e35fc906a3" method="POST">
                <div class="form-group">
                  <div class="form-row">
                    <div class="col">
                      <input type="text" name="name" class="form-control" placeholder="Dein Name" required>
                    </div>
                    <div class="col">
                      <input type="email" name="email" class="form-control" placeholder="Deine Email" required>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <textarea placeholder="Deine Nachricht an uns" class="form-control" name="message" rows="10" required></textarea>
                </div>
                <button type="submit" class="btn btn-lg btn-dark btn-block">Los geht's</button>
              </form>
            </div>
        </div>

    </div>
</section>